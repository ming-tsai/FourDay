<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.certificate.basic.android.altice.fourday">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TextViewActivity"
            android:label="@string/my_text_view"/>
        <activity android:name=".ImageViewActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity android:name=".EditTextActivity" />
        <activity android:name=".AutoCompleteTextViewActivity" />
        <activity android:name=".ButtonActivity" />
        <activity android:name=".ImageButtonActivity" />
        <activity android:name=".CheckBoxActivity" />
        <activity android:name=".ToggleButtonActivity" />
        <activity android:name=".RadioButtonActivity" />
        <activity android:name=".RadioButtonGroupActivity" />
        <activity android:name=".ProgressBarActivity" />
        <activity android:name=".SpinnerActivity" />
        <activity android:name=".TimePickerActivity" />
        <activity android:name=".DatePickerActivity" />
        <activity android:name=".DateAndTimeDialogActivity" />
    </application>

</manifest>